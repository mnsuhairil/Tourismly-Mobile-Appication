<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/custom_info_window.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="5dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
    <ImageView
        android:id="@+id/info_window_image"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@color/black"
        android:layout_weight="1"
        android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Sunway Medical Centre"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/openNowTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Now"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/typesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospital,health"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/ratingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating: 4.3"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/userRatingsTotalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Total Rating: 3835"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Address: 5, Jalan Lagoon Selatan, Bandar Sunway, Subang Jaya"
        android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
